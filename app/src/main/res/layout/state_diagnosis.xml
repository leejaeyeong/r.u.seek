<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:fontFamily="@font/cookierun_bold"
            android:text="진단 결과"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#585858"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:id="@+id/symptomImage" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/no_symtom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="증상을 알 수 없습니다!"
                android:textSize="35dp"
                android:fontFamily="@font/cookierun_bold"/>
            <TextView
                android:layout_gravity="center_horizontal"

                android:textColor="#F3F781"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가까운 병원을 방문해 주세요."
                android:textSize="25dp"
                android:fontFamily="@font/cookierun_bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/has_symtom"
            android:gravity="bottom|right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cookierun_bold"
                android:text="symptom"
                android:textSize="35dp"
                android:id="@+id/symptom"/>
            <TextView
                android:textColor="#F3E602"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="으로 예상됩니다."
                android:textSize="25dp"
                android:fontFamily="@font/cookierun_bold"
                android:id="@+id/last_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_gotohome"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/cookierun_bold"
            android:text="확인"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>


</LinearLayout>